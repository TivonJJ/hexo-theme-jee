#archive-page
  section.post,section.photo
    width 33.333333%
    float left
    &:hover
      color color-white
      a
        background color-section-hover
        h1,time
          color color-white
    a
      -webkit-transition background 0.6s ease-in
      transition background 0.6s ease-out
      h1
        white-space nowrap
        text-overflow ellipsis
        overflow hidden
        width 100%
