	<ul id="friend_link">
		<%if(theme.footerFriendLinkEnable){%>
		<li style="margin: 5px 0"><%= __('links') %>:</li>
			<% for (var i in theme.friendLink){ %>
				<li><a href="<%- theme.friendLink[i] %>" target="_blank"><%= i %></a></li>
			<% } %>
		<%}%>
	</ul>
	<ul id="footer-link">
		<% for (var i in theme.footerLink){ %>
		<li><a href="<%- theme.footerLink[i] %>"><%= __(i) %></a></li>
		<% } %>
	</ul>
	<div class="intro">
		<%if(theme.author.intro_line1){%><p><%=theme.author.intro_line1%></p><%}%>
		<%if(theme.author.intro_line2){%><p><%=theme.author.intro_line2%></p><%}%>
	</div>
	<div class="social-font clearfix">
		<% if(theme.author.weibo){ %>
		<a href="http://weibo.com/<%= theme.author.weibo %>" target="_blank" title="weibo"></a>
		<% } %>
		<% if(theme.author.twitter){ %>
		<a href="https://twitter.com/<%=theme.author.twitter %>" target="_blank" title="twitter"></a>
		<% } %>
		<% if(theme.author.github){ %>
		<a href="https://github.com/<%=theme.author.github %>" target="_blank" title="github"></a>
		<% } %>
		<% if(theme.author.facebook){ %>
		<a href="https://www.facebook.com/<%=theme.author.facebook %>" target="_blank" title="facebook"></a>
		<% } %>
		<% if(theme.author.rss){ %>
        <a href="<%=theme.author.rss %>" target="_blank" title="rss"></a>
        <% } %>
		<% if(theme.author.email){ %>
		<a href="mailto:<%=theme.author.email %>" target="_blank" title="email"></a>
		<% } %>
		<% if(theme.author.html5){ %>
		<a href="<%=theme.author.html5 %>" target="_blank" title="html5"></a>
		<% } %>
		<% if(theme.author.css3){ %>
		<a href="<%=theme.author.css3 %>" target="_blank" title="css3"></a>
		<% } %>
	</div>
	<p class="copyright">
		Copyright Â© 2015 <% if (config.author) { %>
		<a href="<%= config.url %>" target="_blank" title="<%= config.author %>"><%= config.author %></a>
		<% } else {%>
		<a href="<%= config.url %>" title="<%= config.title %>"><%= config.title %></a>
		<% } %> , All Rights Reserved.
		<%if(config.beian){%><span class="beian"> <%=config.beian%> </span><%}%>
